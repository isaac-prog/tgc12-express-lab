{{#extends 'base'}}

{{#block 'content'}}
<h1>Editing Note</h1>
<form method="POST">
    <div>
        <label class="form-label">Notes:</label>
        <textarea class="form-control" name="content">{{note.content}}</textarea>
    </div>
    <input type="submit" class="btn btn-primary mt-3" value="Update"/>
</form>
{{/block}}

{{/extends}}